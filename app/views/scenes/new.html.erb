<% if @scene.errors.any? %>
	<div id = "error_explanation">
		<h2><%= pluralize(@scene.errors.count, "error") %>
		prohibited this scene from being saved:</h2>

		<ul>
			<% @scene.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<h1>New Scene</h1>
<%= form_for(@scene) do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_field :description %>
	</p>

	<p>
		<%= f.label :visual %><br>
		<%= f.text_field :visual %>
	</p>

	<%= f.submit %>
<% end %>