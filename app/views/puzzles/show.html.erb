<% title(@puzzle.name, "Puzzles") %>
<h1><%= @puzzle.name %></h1>
<%= link_to "Edit Puzzle", edit_puzzle_path(@puzzle) %>
<%= link_to "Delete Puzzle",
	puzzle_path(@puzzle),
	method: :delete,
	data: { confirm: "Are you sure you want to delete this puzzle?" }
%>
<p><%= @puzzle.description %></p>
<p><%= @puzzle.contract %></p>
<p><%= @puzzle.solution %></p>
