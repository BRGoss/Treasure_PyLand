<h1>New Puzzle</h1>
<%= form_for(@puzzle) do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label :contract %>
		<%= f.text_area :contract %>
	</p>

	<p>
		<%= f.label :solution %>
		<%= f.text_area :solution %>
	</p>

	<%= f.submit %>
<% end %>
