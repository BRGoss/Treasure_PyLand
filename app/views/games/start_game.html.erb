			<%= hidden_field_tag :frame_order, @story.frame_order, :autocomplete => :off %>
			<%= submit_tag "Continue", id: "Continue" %>
			<%= submit_tag "Try Again", id: "Try_Again" %>
			<% end %>
		</section> -->

</div>
<script>
$(function(){ // If you are not familiar with jQuery, this will run when the page is loaded and ready
  $('#Try_Again').click(function(){
    $('#Test_Failure').hide(); 
    $('#Result_Box').hide();
  });
});
</script>

