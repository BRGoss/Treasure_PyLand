<div id="frame">
	<header>
		<h1><%= @storyboard.title %></h1>
	</header>

	<header>
		<h2><%= @frame.frame_order %>
			-
			<%= @frame.scene.title %>
			<nbsp>-<nbsp>
			<%= @frame.puzzle.name %>
		</h2>

		<ul class="actions">
			<li><%= link_to "Edit Frame", [:edit, @storyboard, @frame],
				class: "edit" %></li>
			<li><%= link_to "Delete Frame", [@storyboard, @frame], 
				method: :delete,
				data: { confirm: "Are you sure you want to delete this frame?" }, 
				class: "delete" %></li>
		</ul>
	</header>

	
